<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fall.robok.mapper.SellerMapper">

    <!-- SellerInfo getSellerInfoByOpenId(String openid); -->
    <select id="getSellerInfoByOpenId" resultType="com.fall.robok.vo.SellerInfo">
        select `nick_name`,`school`,`phone`,`address`,`latitude`,`longitude`
        from t_user where open_id = #{openid}
    </select>

</mapper>